  <script>
    // Small helper: reveal on scroll
    (function(){
      const r = document.querySelectorAll('.reveal');
      const io = new IntersectionObserver((entries)=>{
        entries.forEach(e=>{ if(e.isIntersecting) e.target.classList.add('is-visible'); });
      },{threshold:0.08});
      r.forEach(el=>io.observe(el));
    })();

    // Update year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Contact form handler (lightweight): attempts to open mailto as fallback
    function handleContact(e){
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      const message = document.getElementById('message').value.trim();
      const status = document.getElementById('formStatus');

      // Simple front-end validation already handled by `required` attributes
      // By default we'll open the user's email client via mailto. If you prefer, connect to Formspree or Netlify Forms.
      const subject = encodeURIComponent('Portfolio inquiry from ' + name);
      const body = encodeURIComponent(message + '\n\nâ€” ' + name + ' ('+email+')');

      // Try to open mail client
      window.location.href = `mailto:you@example.com?subject=${subject}&body=${body}`;
      status.textContent = 'Opening your email client...';

      // Reset after a short delay
      setTimeout(()=>{
        status.textContent = 'Message composed in mail client â€” send to complete.';
        e.target.reset();
      },900);
    }

    // Small keyboard accessibility enhancement for project cards
    document.addEventListener('keydown', (ev)=>{
      if(ev.key === 'Escape') window.scrollTo({top:0,behavior:'smooth'});
    });

  </script>
